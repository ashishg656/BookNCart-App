<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_top_rated"
    android:layout_width="@dimen/bnc_home_top_rated_book_image_width"
    android:layout_height="@dimen/bnc_home_top_rated_viewpager_height"
    android:layout_marginRight="@dimen/bnc_margin_supermini"
    android:background="@drawable/shadow_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_rated_book_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bnc_home_top_rated_book_image_height"
        android:layout_margin="@dimen/bnc_margin_mini"
        android:scaleType="centerCrop"
        android:src="@drawable/book4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/bnc_margin_mini"
        android:paddingRight="@dimen/bnc_margin_mini"
        android:text="Book name here can be long too old"
        android:textColor="@color/bnc_text_color_medium_dark"
        android:textSize="@dimen/bnc_font_supermini" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bnc_margin_mini"
        android:paddingRight="@dimen/bnc_margin_mini" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="â‚¹ 550"
            android:textColor="@color/PrimaryColor"
            android:textSize="@dimen/bnc_font_supermini"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>