<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zimply.app"
    xmlns:app1="http://schemas.android.com/apk/res/com.bookncart.app"
    android:id="@+id/navigationdrawerheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/bnc_drawer_header_top_padding" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/avatardefault"
            android:layout_width="@dimen/bnc_drawer_profile_image_height"
            android:layout_height="@dimen/bnc_drawer_profile_image_height"
            android:layout_marginLeft="@dimen/bnc_margin_large"
            android:layout_marginStart="@dimen/bnc_margin_large"
            android:elevation="@dimen/bnc_margin_mini"
            android:src="@drawable/ic_launcher" />

        <com.bookncart.app.widgets.CircularImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/bnc_drawer_profile_image_height"
            android:layout_height="@dimen/bnc_drawer_profile_image_height"
            android:layout_marginLeft="@dimen/bnc_margin_large"
            android:layout_marginStart="@dimen/bnc_margin_large"
            android:elevation="@dimen/bnc_margin_mini"
            app1:border="false"
            app1:shadow="false" />
    </FrameLayout>

    <TextView
        android:id="@+id/navdrawerusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bnc_margin_large"
        android:layout_marginStart="@dimen/bnc_margin_large"
        android:layout_marginTop="@dimen/bnc_margin_small"
        android:text="Username" />

    <TextView
        android:id="@+id/navdraweremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bnc_margin_large"
        android:layout_marginLeft="@dimen/bnc_margin_large"
        android:layout_marginStart="@dimen/bnc_margin_large"
        android:text="username@mymail.com" />

</LinearLayout>