<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bookncart.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@drawable/shadow_bg_shop"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shop_layout_image_grid_cart"
            android:layout_width="@dimen/bnc_cart_list_image_width"
            android:layout_height="@dimen/bnc_cart_list_image_height"
            android:layout_margin="@dimen/bnc_margin_mini"
            android:scaleType="centerCrop"
            android:src="@drawable/book3" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/bnc_margin_mini"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/book_name_shop_grid_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bnc_margin_mini"
                android:ellipsize="end"
                android:text="Book name here can be long too old"
                android:textColor="@color/bnc_text_color_medium_dark"
                android:textSize="@dimen/bnc_font_mini" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author: "
                    android:textColor="@color/bnc_text_color_light"
                    android:textSize="@dimen/bnc_font_supermini" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Author name here"
                    android:textColor="@color/bnc_text_color_medium_dark"
                    android:textSize="@dimen/bnc_font_mini" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textColor="@color/bnc_text_color_light"
                        android:textSize="@dimen/bnc_font_supermini" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="₹ 505"
                        android:textColor="@color/bnc_text_color_medium_dark"
                        android:textSize="@dimen/bnc_font_mini" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: "
                        android:textColor="@color/bnc_text_color_light"
                        android:textSize="@dimen/bnc_font_supermini" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="10"
                        android:textColor="@color/bnc_text_color_medium_dark"
                        android:textSize="@dimen/bnc_font_mini" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:text="₹ 550"
                android:textColor="@color/PrimaryColor"
                android:textSize="@dimen/bnc_font_mini"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/bnc_margin_mini"
        android:background="@color/bnc_grey_shade_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/bnc_margin_small" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_delete_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bnc_margin_mini"
                android:layout_marginTop="2dp"
                android:text="REMOVE"
                android:textColor="@color/bnc_red_color_primary" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bnc_grey_shade_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/bnc_margin_small" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_edit_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bnc_margin_mini"
                android:layout_marginTop="2dp"
                android:text="EDIT"
                android:textColor="@color/bnc_green_color_primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>