        android:paddingRight="5dp"
        android:paddingTop="62dp"
        android:scrollbars="none" />

    <include layout="@layout/toolbar_layout" />

    <include layout="@layout/connection_error_layout" />

    <include layout="@layout/progress_layout" />

</FrameLayout>