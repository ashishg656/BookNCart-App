<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/com.bookncart.app"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <!-- The main content view -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/bnc_margin_small"
                android:paddingTop="56dp"
                android:scrollbars="none" />

            <include layout="@layout/toolbar_layout" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bnc_black_with_40_alpha" />

            <ImageView
                android:id="@+id/sharebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bnc_like_button_bg_selector" />

            <ImageView
                android:id="@+id/similarbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bnc_like_button_bg_selector" />

            <ImageView
                android:id="@+id/favouritebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bnc_like_button_bg_selector" />

            <ImageView
                android:id="@+id/thumb_ind_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thumb_indicator" />
        </FrameLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bnc_white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_drawer_header_layout"
        app:menu="@menu/drawer_items_menu"
        app1:itemBackground="@null" />

</android.support.v4.widget.DrawerLayout>