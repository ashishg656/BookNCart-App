<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@drawable/shadow_bg_shop" >

    <FrameLayout
        android:id="@+id/maincontentcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="@drawable/z_user_profile_article_bg_selector" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/shop_layout_image_grid_cart"
                    android:layout_width="@dimen/bnc_cart_list_image_width"
                    android:layout_height="@dimen/bnc_cart_list_image_height"
                    android:layout_margin="@dimen/bnc_margin_mini"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/bnc_margin_mini"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/book_name_shop_grid_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bnc_margin_mini"
                        android:ellipsize="end"
                        android:text="Book name here can be long too old"
                        android:textColor="@color/bnc_text_color_medium_dark"
                        android:textSize="@dimen/bnc_font_mini" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: "
                            android:textColor="@color/bnc_text_color_light"
                            android:textSize="@dimen/bnc_font_supermini" />

                        <TextView
                            android:id="@+id/authornamecart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Author name here"
                            android:textColor="@color/bnc_text_color_medium_dark"
                            android:textSize="@dimen/bnc_font_mini" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price: "
                                android:textColor="@color/bnc_text_color_light"
                                android:textSize="@dimen/bnc_font_supermini" />

                            <TextView
                                android:id="@+id/pricecart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="₹ 505"
                                android:textColor="@color/bnc_text_color_medium_dark"
                                android:textSize="@dimen/bnc_font_mini" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity: "
                                android:textColor="@color/bnc_text_color_light"
                                android:textSize="@dimen/bnc_font_supermini" />

                            <TextView
                                android:id="@+id/quantitycart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="10"
                                android:textColor="@color/bnc_text_color_medium_dark"
                                android:textSize="@dimen/bnc_font_mini" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Condition: "
                            android:textColor="@color/bnc_text_color_light"
                            android:textSize="@dimen/bnc_font_supermini" />

                        <TextView
                            android:id="@+id/conditioncart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW"
                            android:textColor="@color/bnc_green_color_primary"
                            android:textSize="@dimen/bnc_font_mini" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cartitemtotlal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/bnc_margin_small"
                        android:gravity="right|bottom"
                        android:text="₹ 550"
                        android:textColor="@color/PrimaryColor"
                        android:textSize="@dimen/bnc_font_mini"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>