<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bookncart.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@drawable/shadow_bg_shop"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shop_layout_image_grid"
        android:layout_width="@dimen/bnc_shop_list_image_width"
        android:layout_height="@dimen/bnc_shop_list_image_height"
        android:layout_margin="@dimen/bnc_margin_mini"
        android:scaleType="centerCrop"
        android:src="@drawable/book3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bnc_shop_list_image_height"
        android:layout_margin="@dimen/bnc_margin_mini"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/book_name_shop_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/bnc_margin_mini"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="Book name here can be long too old"
            android:textColor="@color/bnc_text_color_dark"
            android:textSize="@dimen/bnc_font_mini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bnc_margin_mini"
            android:paddingRight="@dimen/bnc_margin_mini" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="â‚¹ 550"
                android:textColor="@color/PrimaryColor"
                android:textSize="@dimen/bnc_font_mini"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>